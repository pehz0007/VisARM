<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE RSyntaxTheme SYSTEM "theme.dtd">

<!--
   Dark theme based off of Notepad++'s Obsidian theme.
   See theme.dtd and org.fife.ui.rsyntaxtextarea.Theme for more information.
-->
<RSyntaxTheme version="1.0">

   <!-- Omitting baseFont will use a system-appropriate monospaced. -->
   <baseFont family="Monospaced" size="14"/>
   
   <!--  General editor colors. -->
   <background color="000000"/>
   <caret color="ffffff"/>
   <selection useFG="false" bg="073642" roundedEdges="false"/>
   <currentLineHighlight color="2F393C" fade="false"/>
   <marginLine fg="394448"/>
   <markAllHighlight color="242424"/> <!-- TODO: Fix me -->
   <markOccurrencesHighlight color="242424" border="false"/>
   <matchedBracket fg="6A8088" bg="6b8189" highlightBoth="false" animate="true"/>
   <hyperlinks fg="a082bd"/>
   <secondaryLanguages>
      <language index="1" bg="334455"/>
      <language index="2" bg="223322"/>
      <language index="3" bg="ffe0f0"/>
   </secondaryLanguages>
   
   <!-- Gutter styling. -->
   <gutterBorder color="000000"/>
   <lineNumbers fg="8F908A"/>
   <foldIndicator fg="6A8088" iconBg="2f383c"/>
   <iconRowHeader activeLineRange="3399ff"/>
   
   <!-- Syntax tokens. -->
   <tokenStyles>
      <style token="IDENTIFIER" fg="839496"/>
      <style token="RESERVED_WORD" fg="859900" bold="true"/>
      <style token="RESERVED_WORD_2" fg="859900" bold="true"/>
      <style token="ANNOTATION" fg="E8E2B7"/>
      <style token="COMMENT_DOCUMENTATION" fg="586e75"/>
      <style token="COMMENT_EOL" fg="586e75"/>
      <style token="COMMENT_MULTILINE" fg="586e75"/>
      <style token="COMMENT_KEYWORD" fg="586e75"/>
      <style token="COMMENT_MARKUP" fg="586e75"/>
      <style token="FUNCTION" fg="d33682"/>
      <style token="DATA_TYPE" fg="678CB1" bold="true"/>
      <style token="LITERAL_BOOLEAN" fg="93C763" bold="true"/>
      <style token="LITERAL_NUMBER_DECIMAL_INT" fg="b58900"/>
      <style token="LITERAL_NUMBER_FLOAT" fg="b58900"/>
      <style token="LITERAL_NUMBER_HEXADECIMAL" fg="b58900"/>
      <style token="LITERAL_STRING_DOUBLE_QUOTE" fg="839496"/>
      <style token="LITERAL_CHAR" fg="839496"/>
      <style token="LITERAL_BACKQUOTE" fg="839496"/>
      <style token="MARKUP_TAG_DELIMITER" fg="678CB1"/>
      <style token="MARKUP_TAG_NAME" fg="ABBFD3" bold="true"/>
      <style token="MARKUP_TAG_ATTRIBUTE" fg="B3B689"/>
      <style token="MARKUP_TAG_ATTRIBUTE_VALUE" fg="e1e2cf"/>
      <style token="MARKUP_COMMENT" fg="66747B"/>
      <style token="MARKUP_DTD" fg="A082BD"/>
      <style token="MARKUP_PROCESSING_INSTRUCTION" fg="A082BD"/>
      <style token="MARKUP_CDATA" fg="d5e6f0"/>
      <style token="MARKUP_CDATA_DELIMITER" fg="ae9fbf"/>
      <style token="MARKUP_ENTITY_REFERENCE" fg="678CB1"/>
      <style token="OPERATOR" fg="839496"/>
      <style token="PREPROCESSOR" fg="2aa198"/>
      <style token="REGEX" fg="d39745"/>
      <style token="SEPARATOR" fg="839496"/>
      <style token="VARIABLE" fg="6c71c4" bold="true"/>
